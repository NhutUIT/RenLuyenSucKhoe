<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="THỨ 2: CÁC BÀI TẬP NGỰC"
                android:textSize="50px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv1"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/g1"
               android:background="#999999"
                android:text="Bài 1: Chống hai tay trên sàn khi ở vị trí cao lần lược lấy tạy này chạm vai khi, hà xuống thì hít vào, khi lên thì thở ra, không duổi thẳng tay, tập 2 hiệp, mỗi hiệp 8-10 rep." />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv2"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="80dp"
                android:layout_toRightOf="@id/g2"
                android:background="#999999"
                android:text="Bài 2: Chống hai tay trên sàn khi hà xuống thì hít vào, khi lên thì thở ra, không duổi thẳng tay, tập 2 hiệp, mỗi hiệp 8-10 rep" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv3"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="97dp"
                android:layout_toRightOf="@id/g3"
                android:background="#999999"
                android:text="Bài 3: Hai tay cầm tạ ở vị trí ngang ngực lúc này hít vào và đẩy tạ thẳng lên rồi thở ra, tập 2 hiệp mổi hiệp 8-10 rep." />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv4"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="98dp"
                android:layout_toRightOf="@id/g3"
                android:background="#999999"
                android:text="Bài 4: Hai tay cầm tạ ở vị trí ngang ngực lúc này hít vào rồi khép hai tay vào đồng thời xoay cổ tay khi lên cao thì thở ra, tập 2 hiệp mổi hiệp 8-10 rep." />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/g1"
                android:layout_width="300px"
                android:layout_height="300px"
                android:src="@drawable/wwg_10"
                android:layout_below="@id/tv1"
                android:layout_marginTop="30px"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/g2"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_below="@id/g1"
                android:src="@drawable/wwg_9"
                android:layout_marginTop="30px"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/g3"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_below="@id/g2"
                android:src="@drawable/wwg_11"
                android:layout_marginTop="30px"/>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/g4"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_below="@id/g3"
                android:src="@drawable/wwg_12"
                android:layout_marginTop="30px"/>

        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>