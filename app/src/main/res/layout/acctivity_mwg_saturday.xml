<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THỨ 7: CÁC BÀI TẬP TAY"
                android:textStyle="bold"
                android:textSize="50px"
                />


            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 1: Dùng 2 tạ đơn tại vị trí bắt đầu chân hơi khụy, lưng thẳng, hít vào rồi kéo tạ lên gần bụng rồi thở ra, tập 2 hiệp mỗi hiệp 8-10 rep, giúp phát triễn và chắc cơ lưng."
                android:layout_toRightOf="@id/g1"
                android:textSize="30px"
                android:layout_below="@id/text"
                android:layout_marginTop="50px"
                android:background="#999999"
                />
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 2: Dùng tạ dòn tại vị trí bắt đầu chân hơi khụy, lưng thẳng, hít vào rồi dung sức của mông đuồi sau và lưng để kéo tạ lên rồi thở ra, tập 2hieepj mỗi hiệp tập 8-10 rep, giúp phát triển cơ duồi sau mông và lưng. "
                android:layout_toRightOf="@id/g2"
                android:layout_below="@id/text1"
                android:layout_marginTop="115px"
                android:textSize="30px"
                android:background="#999999"
                />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="23dp"
                android:layout_toRightOf="@id/g3"
                android:background="#999999"
                android:text="Bài 3: Ngồi vào máy đặt chân vào bụt sao cho thoải mái nhất tại vị trí bắt đầu giữ lưng thẳng rồi chồm tới hít vào rồi kéo tay nắm vào phía bụng, tập 2 hiệp mỗi hiệp 8-10 rep." />


            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/g1"
                android:layout_width="300px"
                android:layout_height="300px"
                android:src="@drawable/mwg_16"
                android:layout_below="@id/text"
                android:layout_marginTop="50px"/>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/g2"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_below="@id/g1"
                android:src="@drawable/mwg_17" />
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/g3"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_below="@id/g2"
                android:src="@drawable/mwg_18" />

        </RelativeLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>