<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THỨ 3: CÁC BÀI TẬP NGỰC"
                android:textStyle="bold"
                android:textSize="50px"
                />


            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 1: Tại vị trí bắt hai tay đặt rộng hơn vai, hít vào và đẩy lên, không duổi thẳng tay, khi lên cao nhất thì thở ra, tập 2 hiệp mỗi hiệp tập 8-10 rep, giúp làm dầy ngực."
                android:layout_toRightOf="@id/g1"
                android:textSize="30px"
                android:layout_below="@id/text"
                android:layout_marginTop="50px"
                android:background="#999999"
                />
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 2: Tương tự bài 1 nhưng ở bài này hai tay đặt gần nhau, tập 2 hiệp mổi hiệp 8-10 rep, giúp tác động và làm căng phần ngực giữa. "
                android:layout_toRightOf="@id/g2"
                android:layout_below="@id/text1"
                android:layout_marginTop="115px"
                android:textSize="30px"
                android:background="#999999"
                />
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 3: Tại vị trí bắt đầu hai tay dang rộng, tay hơi cong, tạ nằm ngang ngực, sau đó hít vào rồi khép tay lại, tập 2 hiệp mỗi hiệp tập 8-10 rep, giúp làm khích phần ngực giữa."
            android:layout_toRightOf="@id/g3"
                android:layout_below="@id/text2"
                android:layout_marginTop="115px"
                android:background="#999999"
                />


            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/g1"
                android:layout_width="300px"
                android:layout_height="300px"
                android:src="@drawable/mwg_7"
                android:layout_below="@id/text"
                android:layout_marginTop="50px"/>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/g2"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_below="@id/g1"
                android:src="@drawable/mwg_8" />
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/g3"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_below="@id/g2"
                android:src="@drawable/mwg_9" />


        </RelativeLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>