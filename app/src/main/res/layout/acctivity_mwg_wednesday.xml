<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THỨ 4: CÁC BÀI TẬP CHÂN"
                android:textStyle="bold"
                android:textSize="50px"
                />


            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 1: Dùng 2 tạ đơn trọng lượng vừa phải, tại vị trí bắt đầu hít vào rồi hạ trọng tâm xuống, hai chần tạo góc 45 độ, lưng giữa thẳng, khi lên thở ra, tập 2 hiệp mỗi hiệp tập 8-10 rep, giúp phát triển cơ mông và đuồi trước."
                android:layout_toRightOf="@id/g1"
                android:textSize="30px"
                android:layout_below="@id/text"
                android:layout_marginTop="50px"
                android:background="#999999"
                />
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 2: Dùng 2 tạ đơn trọng lượng vừa phải, đứng thẳng lưng, tại vị trí bắt đầu hít vào sau đó nhón chân lên sau đó thở ra, tập 2 hiệp mỗi hiệp 8-10 rep, giúp phát triển cơ bắp chân. "
                android:layout_toRightOf="@id/g2"
                android:layout_below="@id/text1"
                android:layout_marginTop="115px"
                android:textSize="30px"
                android:background="#999999"
                />
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 3: Dùng 1 tạ đơn có trọng lượng tương đối nặng giữa bằng 2 tay, tại tư thế bắt đầu đứng thẳng từ từ hạ người xuống và từ từ hít vào, chân tạo thành góc 45 độ, tập 2 hiệp mỗi hiệp 8-10 rep, giúp phát triễn cơ đuồi trong."
                android:layout_toRightOf="@id/g3"
                android:layout_below="@id/text2"
                android:layout_marginTop="115px"
                android:background="#999999"
                />


            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/g1"
                android:layout_width="300px"
                android:layout_height="300px"
                android:src="@drawable/mwg_10"
                android:layout_below="@id/text"
                android:layout_marginTop="50px"/>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/g2"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_below="@id/g1"
                android:src="@drawable/mwg_11" />
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/g3"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_below="@id/g2"
                android:src="@drawable/mwg_12" />


        </RelativeLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>